{namespace main}

/**
 * @param content
 * @param? elementClasses
 */
{template .render}
	<div class="{$elementClasses ?: 'main'}">
		<main class="content">
			{$content}
		</main>
	</div>
{/template}

/**
 * @param site
 */
{template .menu}
	{call ElectricNavigation.render}
		{param depth: 1 /}
		{param elementClasses: 'nav navbar-nav navbar-right' /}
		{param linkClasses: 'nav-link' /}
		{param listItemClasses: 'nav-item' /}
		{param section: $site.index /}
	{/call}
{/template}

